<!--page名-->
<% provide(:title,  "ADMIN LOGIN") %>

<!--header設定-->
<%= render "shared/head" %>

<%= render "shared/flash" %>

<!--Admin login-->
<div class="devise-background">
  <div class="container">
    <div class="session-devise">
      <div class="row devise-title">
        <h3 class="title_name col-12">管理者ログイン</h3>

      </div>

      <div class="row devise-form">

        <%= form_with model: @admin, url: admin_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

          <%= markup do |m|
            p = DeviseFormPresenter.new(f, self)

            m << p.text_field_block(:email, "メールアドレス", {placeholder: "admin@example.com"})
            m << p.password_field_block(:password, "パスワード", {placeholder: "半角英数字で入力してください。"})

          end %>

          <div class="foget-password-link">
            <%= link_to "パスワードをお忘れの方", new_admin_password_path(resource_name), class:"col-12" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログインを記録する" %>
            </div>
          <% end %>

          <div class="actions devise-submit-btn">
            <%= f.submit "ログイン", class:"btn btn-primary col-6" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

