<!--page名-->
<% provide(:title,  "LOGIN") %>

<!--header設定-->
<%= render "shared/head" %>

<!--login-->
<div class="devise-background">
  <div class="container">
    <div class="session-devise">
      <div class="row devise-title">
        <h3 class="title_name col-12"><%= t('.sign_in') %></h3>
      </div>

      <div class="row devise-form">
        <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <div class="field">
            <%= f.label :login_id, "ID", class:"label" %><br />
            <%= f.text_field :login_id, autofocus: true, autocomplete: "login_id", placeholder: "半角英数字で入力してください。" %>
          </div>

          <div class="field">
            <%= f.label :password, class:"label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字で入力してください。" %>
          </div>
          <div class="foget-password-link">
            <%= link_to "パスワードをお忘れの方", new_password_path(resource_name), class:"col-12" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions devise-submit-btn">
            <%= f.submit t('.sign_in'), class:"btn btn-primary col-6" %>
          </div>
        <% end %>
      </div>

      <div class="row devise-other-link">
        <%= link_to "新規アカウントを作成する", new_registration_path(resource_name), class:"col-12" %>
      </div>

    </div>
  </div>
</div>

