<!--page名-->
<% provide(:title,  "パスワード") %>

<!--header設定-->
<%= render "shared/head" %>

<!--flash設定-->
<%= render "shared/flash" %>

<!--パスワード変更-->
<div class="devise-background">
  <div class="container">
    <div class="session-devise">
      <div class="row devise-title">
        <h3 class="title_name col-12">パスワード再設定</h3>
      </div>

      <div class="row devise-form">
        <%= form_with model: @user, url: user_password_path, id: 'new_user', class: 'new_user', local: true, method: :patch do |f| %>

          <%= f.hidden_field :reset_password_token %>

          <%= markup do |m|
              p = DeviseFormPresenter.new(f, self)
              m << p.password_field_block(:password, "新パスワード", {placeholder: "半角英数字で入力してください"})
              m << p.password_field_block(:password_confirmation, "新パスワード(確認)", {placeholder: "半角英数字で入力してください"})
            end %>

          <div class="actions devise-submit-btn">
            <%= f.submit "変更する", class:"btn btn-primary col-6" %>
          </div>
        <% end %>
      </div>

      <div class="row devise-other-link">
        <%= link_to "ログイン画面に戻る", new_session_path(resource_name), class:"col-12" %>
        <%= link_to "新規アカウントを作成する", new_registration_path(resource_name), class:"col-12" %>
      </div>

    </div>
  </div>
</div>