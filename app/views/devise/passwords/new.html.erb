<!--page名-->
<% provide(:title,  "パスワードを忘れた方") %>

<!--header設定-->
<%= render "shared/head" %>

<!--password再設定-->
<div class="devise-background">
  <div class="container">
    <div class="session-devise">
      <div class="row devise-title">
        <h3 class="title_name col-12">パスワードを忘れた方</h3>
      </div>

      <!--<div class="row devise-comment">-->
        <p class="comment-body">ご登録のemailにパスワード再設定方法をお送りいたします。</p>
      <!--</div>-->


      <div class="row devise-form">
      <%= form_with model: @user, url: user_password_path, id: 'new_user', class: 'new_user', local: true, method: :post do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class:"label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample.example.com" %>
        </div>

        <div class="actions devise-submit-btn">
          <%= f.submit "送信する", class:"btn btn-primary col-6"  %>
        </div>
      <% end %>
      </div>

      <div class="row devise-other-link">
        <%= link_to "既にアカウントをお持ちの方はこちら", new_session_path(resource_name), class:"col-12" %>
        <%= link_to "新規アカウントを作成する", new_registration_path(resource_name), class:"col-12" %>
      </div>

    </div>
  </div>
</div>