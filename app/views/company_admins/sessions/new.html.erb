<!--page名-->
<% provide(:title,  "Company Admin LOGIN") %>

<!--header設定-->
<%= render "shared/head" %>

<!--flash設定-->
<%= render "shared/flash" %>


<!--c_admin login-->
<div class="devise-background">
  <div class="container">
    <div class="session-devise">
      <div class="row devise-title">
        <h3 class="title_name col-12">企業管理者 ログイン</h3>
      </div>

      <div class="row devise-form">


        <%= form_with model: @company_admin, url: company_admin_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

          <%= markup do |m|
              p = DeviseFormPresenter.new(f, self)

            m << p.text_field_block(:login_id, "ID", {placeholder: "半角英数字で入力してください"})
            m << p.password_field_block(:password, "パスワード", {placeholder: "半角英数字で入力してください"})

          end %>

          <div class="foget-password-link">
            <%= link_to "パスワードをお忘れの方", new_company_admin_password_path(resource_name), class:"col-12" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "ログインを記録する"  %>
            </div>
          <% end %>

          <div class="actions devise-submit-btn">
            <%= f.submit "ログイン", class:"btn btn-primary col-6" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
