<!--Confernce Form-->
<div class="row form-title">
  <h3 class="form-title-name col-12">Album <%= title %></h3>
</div>

<div class="form-main">
  <%= form_with model: @album, url: path, id: 'new_album', class: 'new_album', local: true do |f| %>
    <%= markup do |m|
      p = FormPresenter.new(f, self)

      m << p.text_field_block(:name, "アルバムタイトル", {placeholder: "アルバムタイトル"})
      m << p.text_area_block(:introduction, "introduction", {placeholder: "説明"})
      m << p.file_field_block(:images, "画像 ※複数選択可能", {multiple: true})

    end %>

    <%= f.hidden_field :laboratory_id, :value => @set_laboratory.id %>

  <div class="form-main-submit">
    <%= f.submit "登録", class:"btn btn-primary col-6"%>
  </div>

  <% end %>
</div>

<div class="row other-link">
  <%= link_to "アルバム一覧に戻る", public_laboratory_albums_path(@set_laboratory.id), class:"col-12" %>
</div>