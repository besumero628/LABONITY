<div class="row form-title">
  <h3 class="form-title-name col-12">お問い合わせフォーム</h3>
</div>

<div class="form-main">
  <%= form_with model: @contact, url: public_confirm_path, local: true do |f| %>
    <%= markup do |m|
      p = FormPresenter.new(f, self)

      m << p.text_field_block(:name, "お名前")
      m << p.text_area_block(:message, "メッセージ", {rows:10})
      
    end %>

  <div class="form-main-submit">
    <%= f.submit "入力内容確認", class:"btn btn-primary col-6"%>
  </div>

  <% end %>
</div>

<div class="row other-link">
  <%= link_to "Topへ戻る", public_root_path, class:"col-12" %>
</div>