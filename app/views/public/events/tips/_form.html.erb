<!--Paper Form-->
<div class="row form-title">
  <h3 class="form-title-name col-12">Event<%= title %></h3>
</div>

<div class="form-main">
  <%= form_with model: @event, url: path, id: 'new_event', class: 'new_event', local: true do |f| %>
    <%= markup do |m|
      p = FormPresenter.new(f, self)

      m << p.text_field_block(:title, "タイトル", {placeholder: "タイトル"})
      m << p.text_area_block(:body, "本文", {rows:10})
      m << p.text_field_block(:link_path, "link (※任意)")

    end %>

    <%= f.hidden_field :company_id, :value => @set_company.id %>

  <div class="form-main-submit">
    <%= f.submit "登録", class:"btn btn-primary col-6"%>
  </div>

  <% end %>
</div>

<div class="row other-link">
  <%= link_to "Company Topに戻る", public_company_path(@set_company.id), class:"col-12" %>
</div>