<!--News Release-->
<div class="container">
  <div class="row news">
    <i class="far fa-2x fa-newspaper news-icon"></i>
    <h4>News Release</h4>
    <div class="btn-show">
      <button class="btn btn-primary btn-round btn-sm", onclick="scrollToDownload()">一覧を見る</button>
    </div>
    <table class="table news-table">

      <% @news.each do |news| %>
        <tr>
          <th width="80%"><%= news.title %></th>
          <td><%= news.release_at.strftime("%Y/%m/%d") %></td>
        </tr>
      <% end %>
      
    </table>
  </div>
</div>