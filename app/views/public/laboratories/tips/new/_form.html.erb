<!--Confernce Form-->
<div class="row form-title">
  <h3 class="form-title-name col-12">Laboratory <%= title %></h3>
</div>

<div class="form-main">
  <%= form_with model: @laboratory, url: public_laboratories_path, id: 'new_laboratory', class: 'new_laboratory', local: true do |f| %>
    <%= markup do |m|
      p = FormPresenter.new(f, self)

      m << p.text_field_block(:name, "研究室名", {placeholder: "令和研究室"})
      m << p.text_area_block(:introduction, "introduction", {placeholder: "当研究室では~"})
      m << p.collection_select_block(:organization_id, "所属大学", College.all, :id, :name)

    end %>
    
    <%= f.hidden_field :organization_type, :value => "College" %>

  <div class="form-main-submit">
    <%= f.submit "登録", class:"btn btn-primary col-6"%>
  </div>

  <% end %>
</div>

<div class="row other-link">
  <%= link_to "研究室一覧に戻る", public_laboratories_path, class:"col-12" %>
</div>