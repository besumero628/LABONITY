<!--header設定-->
<%= render "shared/head" %>

<!--error内容-->
<div class="container">
  <div class="row error-content">
    <div id="error">
      <h2 class="error-name">403 Forbidden</h2>
      
      <div class="error-img">
        <img src="/assets/shared/errors/error_403.jpg" alt="エラー医師">
      </div>
      
      <p>
        <%= 
          case @exception
          when ApplicationController::IpAddressRejected
            "あなたのIPアドレス（#{request.ip}）からは利用できません。"
          else
            "指定されたページを閲覧する権限がありません。"
          end
         %>
      </p>
    </div>
  
    <div class="backup-link col-12">
      <%= link_to "LABONITY Topへ戻る", public_root_path, class:"btn btn-primary btn-round btn-lg" %>
    </div>
  </div>
</div>